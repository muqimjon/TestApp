<Page x:Class="TestApp.Desktop.Views.Pages.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TestApp.Desktop.Views.Pages"
      mc:Ignorable="d" 
      Title="Register">

    <Grid Margin="50">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="Username"/>
            <TextBox x:Name="UsernameTextBox" Height="30"/>

            <TextBlock Text="Password" Margin="0,15,0,5"/>
            <PasswordBox x:Name="PasswordBox" Height="30"/>

            <TextBlock Text="Confirm Password" Margin="0,15,0,5"/>
            <PasswordBox x:Name="ConfirmPasswordBox" Height="30"/>

            <Button Content="Register" Height="35"
                    Margin="0,20,0,0"
                    Background="ForestGreen" Foreground="White"
                    Click="SubminButton_Click"/>
            
            <Button Content="Login"
                    Margin="0,10,0,0" Height="30" Click="LoginButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
