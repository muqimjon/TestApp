<Page x:Class="TestApp.Desktop.Views.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TestApp.Desktop.Views.Pages"
      mc:Ignorable="d" 
      Title="Login">

    <Grid Margin="50">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="Username" Margin="0,0,0,5"/>
            <TextBox x:Name="tbUsername" Height="30"/>

            <TextBlock Text="Password" Margin="0,15,0,5"/>
            <PasswordBox x:Name="pbPassword" Height="30"/>

            <Button x:Name="LoginButton" Content="Login"
                    Margin="0,20,0,0" Height="35"
                    Background="DodgerBlue" Foreground="White"
                    Click="SubmitButton_Click"/>

            <Button Content="Register"
                    Margin="0,10,0,0" Height="30" Click="RegisterButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
