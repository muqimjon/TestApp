<UserControl x:Class="TestApp.Desktop.Views.Components.Navbar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TestApp.Desktop.Views.Components"
             mc:Ignorable="d" 
             d:DesignHeight="50" Background="#f5f5f5">

    <DockPanel Margin="10" LastChildFill="False">
        <!-- Chap tomonga -->
        <TextBlock Text="TestApp"
               FontWeight="Bold"
               FontSize="18"
               VerticalAlignment="Center"
               DockPanel.Dock="Left"/>

        <!-- O‘ng tomonga -->
        <StackPanel Orientation="Horizontal" 
                DockPanel.Dock="Right" 
                VerticalAlignment="Center">
            <TextBlock Text="{Binding FullName}" VerticalAlignment="Center" Margin="0,0,10,0"/>

            <ComboBox x:Name="CategoryCombo"
                      Width="150"
                      Margin="0,0,10,0"
                      IsEditable="True"/>

            <Button Content="➕ Test qo'shish" Margin="0,0,10,0" Click="AddButton_Click"/>
            <Button Content="🚪 Chiqish" Background="Tomato" Foreground="White"
                    Click="ExitButton_Click"/>
        </StackPanel>
    </DockPanel>

</UserControl>
